{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(env:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(xargs:*)",
      "Bash(/usr/bin/head:*)",
      "Bash(find:*)",
      "Bash(bash -x:*)",
      "Bash(git --version)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git config:*)",
      "Bash(git check-ignore:*)",
      "Bash(git help:*)",
      "Bash(git submodule:*)",
      "Bash(gh api:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(node:*)",
      "Bash(npm view:*)",
      "Bash(claude --version:*)",
      "Bash(claude config:*)",
      "Bash(copilot --version:*)",
      "Bash(copilot --help:*)",
      "Bash(copilot config:*)",
      "Bash(copilot help:*)",
      "Bash(apt-cache policy:*)",
      "Bash(lsb_release:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:support.claude.com)",
      "WebFetch(domain:deepwiki.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:en.wikipedia.org)",
      "WebFetch(domain:ja.wikipedia.org)",
      "WebFetch(domain:medium.com)"
    ],
    "additionalDirectories": [
      "{{ .chezmoi.homeDir }}/src/github.com/r-okm/project-ignores"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
