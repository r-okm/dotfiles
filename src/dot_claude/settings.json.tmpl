{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(wc *)",
      "Bash(du *)",
      "Bash(env)",
      "Bash(grep *)",
      "Bash(echo *)",
      "Bash(/usr/bin/head *)",
      "Bash(find *)",
      "Bash(git --version)",
      "Bash(git log *)",
      "Bash(git ls-files *)",
      "Bash(git ls-tree *)",
      "Bash(git config --get *)",
      "Bash(git config --list *)",
      "Bash(git check-ignore *)",
      "Bash(git help *)",
      "Bash(git submodule status *)",
      "Bash(git submodule summary *)",
      "Bash(gh issue view *)",
      "Bash(gh repo view *)",
      "Bash(gh pr view *)",
      "Bash(gh pr list *)",
      "Bash(gh api '/repos/{owner}/{repo}/pulls/*/comments'*)",
      "Bash(gh api '/repos/{owner}/{repo}/pulls/*/reviews'*)",
      "Bash(gh api graphql *)",
      "Bash(node --version)",
      "Bash(npm view *)",
      "Bash(claude --version)",
      "Bash(copilot --version)",
      "Bash(copilot --help)",
      "Bash(copilot help *)",
      "Bash(apt-cache policy *)",
      "Bash(lsb_release *)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:claude.com)",
      "WebFetch(domain:support.claude.com)",
      "WebFetch(domain:deepwiki.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:en.wikipedia.org)",
      "WebFetch(domain:ja.wikipedia.org)",
      "Skill(fetch-pr-context)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.config/gh/**)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Edit(./secrets/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.gnupg/**)",
      "Edit(~/.config/gh/**)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(sudo *)",
      "Bash(git push *)",
      "Bash(git add *)"
    ],
    "ask": [],
    "additionalDirectories": [
      "{{ .chezmoi.homeDir }}/src/github.com/r-okm/project-ignores"
    ]
  }
}
