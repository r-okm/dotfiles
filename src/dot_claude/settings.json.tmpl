{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(timeout 120 copilot:*)"
    ],
    "additionalDirectories": [
      "{{ .chezmoi.homeDir }}/src/github.com/r-okm/project-ignores"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/r-okm/scripts/notify-to-tmux-popup.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
