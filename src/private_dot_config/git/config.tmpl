# vim: set ft=conf:

[include]
  path = ~/.config/git/themes.gitconfig
[credential]
{{ if eq .chezmoi.os "linux" }}
{{   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}
  helper = "/mnt/c/bin/git-credential-manager"
{{   end }}
{{ else }}
  provider = generic
{{ end }}
[core]
  editor = nvim
  autocrlf = false
  pager = delta --features=git
  filemode = false
[interactive]
  diffFilter = delta --color-only
[delta "git"]
  features = chameleon
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
[delta "fzf_git_log"]
  features = chameleon
  navigate = true
  light = false
  side-by-side = false
  line-numbers = true
[user]
  useConfigOnly = true
  name = r-okm
  email = r.okm.00113@gmail.com
  signingkey = {{ .chezmoi.homeDir }}/.ssh/keypair/git/sign_gh_gmail.pub
[alias]
  fzf-log = log --graph --abbrev-commit --decorate --date=format-local:'%Y/%m/%d %H:%M' --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cd%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(reset)%s%C(reset) %C(dim white)- %an (%h)%C(reset)'
[init]
  defaultBranch = main
[submodule]
  recurse = true
[fetch]
  prune = true
  recurseSubmodules = on-demand
[push]
  default = current
  autoSetupRemote = true
  recurseSubmodules = no
[pull]
  rebase = false
[commit]
  verbose = true
  gpgsign = true
  template = ~/.config/git/commitEditMessageTemplate.txt
[gpg]
  format = ssh
[merge]
  tool = diffview.nvim
[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[mergetool "nvim"]
  cmd = "nvim -d -c \"3wincmd w | wincmd J\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\""
[mergetool "diffview.nvim"]
  cmd = "nvim -c 'DiffviewOpen'"
[mergetool]
  prompt = false
[advice]
  detachedHead = false
[color]
  status = always
  diff = always
[http "{{ index . "git_repository_host_work" | default "" }}"]
  sslVerify = false
{{ if eq .chezmoi.os "windows" }}
[safe]
  directory = *
{{ end }}
[includeIf "hasconfig:remote.*.url:{{ index . "git_repository_host_work" | default "" }}/**"]
  path = ~/.config/git/work.gitconfig
[includeIf "hasconfig:remote.*.url:git@github.com.work:*/**"]
  path = ~/.config/git/work.gitconfig
