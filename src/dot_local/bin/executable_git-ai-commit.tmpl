#!/bin/bash
set -euo pipefail

CLAUDE_MODEL="${CLAUDE_MODEL:-sonnet}"
COPILOT_MODEL="${COPILOT_MODEL:-{{ .copilot.model.commit }}}"

if git diff --cached --quiet; then
  echo "ステージされた変更がありません"
  exit 1
fi

DIFF_MAX=80000

PROMPT=$(cat <<'EOF'
Generate a commit message for the staged changes.
Output ONLY the commit message. No explanation, no code blocks.

## Recent commits
EOF
)
PROMPT+=$'\n'
PROMPT+=$(git log --format='---%n%s%+b' -10)
PROMPT+=$'\n\n## Changed files\n'
PROMPT+=$(git diff --cached --stat)
PROMPT+=$'\n\n## Diff\n'
PROMPT+=$(git diff --cached -- . ':!*lock*' ':!*.lock' | head -c "$DIFF_MAX")

echo "claude ($CLAUDE_MODEL) でコミットメッセージを生成中..."
if msg=$(printf '%s' "$PROMPT" | claude --print --model "$CLAUDE_MODEL"); then
  echo "claude で生成完了"
else
  echo "claude が失敗しました:" >&2
  [ -n "$msg" ] && echo "$msg" >&2
  echo "copilot ($COPILOT_MODEL) にフォールバック..."
  msg=$(copilot --prompt "$PROMPT" --silent --model "$COPILOT_MODEL" 2>/dev/null)
fi

if [ -z "$msg" ]; then
  echo "コミットメッセージの生成に失敗しました"
  exit 1
fi

git commit --edit --message="$msg"
