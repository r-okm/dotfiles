#!/usr/bin/env bash
set -euo pipefail

{{ if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
YANK_CMD='win32yank -i'
PUT_CMD='win32yank -o --lf'

{{ else -}}
YANK_CMD='wl-copy --type text/plain --trim-newline'
PUT_CMD='wl-paste --no-newline'

{{ end -}}

# show help
help() {
  cat << EOF
Usage: $(basename "$0") [OPTIONS]
Options:
  --yank, -y          Yank stdin to clipboard
  --put, --paste, -p  Put clipboard content to stdout
  --help, -h          Display this help message
EOF
}

# yank stdin to clipboard
yank() {
  $YANK_CMD
}

# stdout clipboard content
put() {
  $PUT_CMD
}

# main function
main() {
  local opt="${1:-help}"

  case "$opt" in
    --yank|-y)
      yank
      ;;
    --put|--paste|-p)
      put
      ;;
    --help|-h)
      help
      ;;
    *)
      echo "Invalid option: $*"
      echo
      help
      exit 1
      ;;
  esac
}

main "$@"

