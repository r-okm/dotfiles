{{ if ne .chezmoi.os "windows" -}}
[merge]
command = "nvim"
args = [
  "-d",
  "{{ "{{" }} .Destination {{ "}}" }}",
  "{{ "{{" }} .Source {{ "}}" }}"
]
[diff]
pager = "delta --features=git"
exclude = ["scripts"]
{{ end -}}
